<script src="assets/js/moment.min.js" type="text/javascript"></script>
<body>
    <header id="APcabecalho">
        <label class="lcabecalho">Linguagens</label>
        <a href="/pages/linguagens"><button class="voltar"> &larr; Voltar</button></a>
    </header>
    {{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
    {{else}}

    {{/each}}
    <div class="card">
        <div class="card-body">
            <form name="formulario" action="/pages/linguagens/nova" method="POST">
                <label class="ltitulo" for="titulo">Titulo: </label>
                <input  class="ititulo" width="20px" type="text" name="titulo" class="form-control" placeholder="Titulo da linguagem" required><br>   
                <label class="ldescricao" for="descricao">Descrição: </label>
                <textarea class="tdescricao" name="descricao" class="form-control" cols="120" rows="20"
                    placeholder="Descrição da linguagem..." required></textarea><br><br>
                <button type="submit" id="botaoSalvar"class="btn btn-primary btn-lg">Salvar</button><br><br>
            </form><br><br>
        </div>
    </div>
</body>