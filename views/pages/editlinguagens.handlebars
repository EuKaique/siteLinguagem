<body>
    <header id="APcabecalho">
        <label class="lcabecalho">Classificados</label>
        <a href="/pages/linguagens"><button class="voltar"> &larr; Voltar</button></a>
    </header>
    {{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
    {{else}}

    {{/each}}
    <div class="card">
        <div class="card-body">
            <form name="formulario" action="/pages/linguagens/edit" method="POST">
                <input type="hidden" value="{{linguagens._id}}" name="id">
                <label class="ltitulo" for="titulo">Titulo: </label>
                <input  class="ititulo" width="20px" type="text" name="titulo" class="form-control" placeholder="Titulo da linguagem" value="{{linguagens.titulo}}" required><br>
                <label class="ldescricao" for="descricao">Descrição: </label>
                <textarea class="tdescricao" name="descricao" class="form-control" cols="120" rows="20"
                    placeholder="Descrição da linguagem..." required>{{linguagens.descricao}}</textarea><br><br>
                <button type="submit" id="botaoSalvar" class="btn btn-primary btn-lg">Salvar</button><br><br>
            </form><br><br>
        </div>
    </div>  
</body>